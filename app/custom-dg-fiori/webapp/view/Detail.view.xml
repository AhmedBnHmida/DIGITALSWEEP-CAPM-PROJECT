<mvc:View
  controllerName="customdgfiori.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page showHeader="false">
    <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">

    <HBox>
      <VBox class="sapUiSmallMargin" >

        <Label text="Segment" />
        <Text text="{Segment}" />

        <Label text="Country" />
        <Text text="{Country}" />

        <Label text="Product" />
        <Text text="{Product}" />

        <Label text="Discount Band" />
        <Text text="{Discount_Band}" />

        <Label text="Units Sold" />
        <Text text="{Units_Sold}" />
      </VBox>

      <VBox class="sapUiSmallMargin">
        <Label text="Manufacturing Price" />
        <Text text="{Manufacturing_Price}" />

        <Label text="Sale Price" />
        <Text text="{Sale_Price}" />

        <Label text="Gross Sales" />
        <Text text="{Gross_Sales}" />

        <Label text="Discounts" />
        <Text text="{Discounts}" />

        <Label text="Sales" />
        <Text text="{Sales}" />
      </VBox>

      <VBox class="sapUiSmallMargin">
        <Label text="COGS" />
        <Text text="{COGS}" />

        <Label text="Profit" />
        <Text text="{Profit}" />

        <Label text="Date" />
        <Text text="{path: 'Date', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy-MM-dd'}}" />

        <Label text="Month Number" />
        <Text text="{Month_Number}" />

        <Label text="Month Name" />
        <Text text="{Month_Name}" />

        <Label text="Year" />
        <Text text="{Year}" />
      </VBox>
    </HBox>

    </Panel>
  </Page>
</mvc:View>
