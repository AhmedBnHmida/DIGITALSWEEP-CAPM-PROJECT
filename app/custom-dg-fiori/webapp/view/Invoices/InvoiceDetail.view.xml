<mvc:View
    controllerName="customdgfiori.controller.Invoices.InvoiceDetail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Invoice Detail" showNavButton="false" navButtonPress=".onNavBack" showHeader="false">
        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
            <VBox class="sapUiSmallMargin" width="650px" renderType="Bare">

                <!-- Row 1 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Invoice ID" />
                        <Text text="{InvoiceID}" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Customer Name" />
                        <Text text="{CustomerName}" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Country" />
                        <Text text="{Country}" />
                    </VBox>
                </FlexBox>

                <!-- Row 2 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Amount" />
                        <Text text="{Amount}" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Currency" />
                        <Text text="{Currency}" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Status" />
                         <ObjectStatus
                            text="{Status}"
                            inverted="true"
                            icon="{= ${Status} === 'Approved' ? 'sap-icon://sys-enter-2' : ${Status} === 'Pending' ? 'sap-icon://alert' : ${Status} === 'Paid' ? 'sap-icon://money-bills' : 'sap-icon://error' }"
                            state="{= ${Status} === 'Approved' ? 'Success' : ${Status} === 'Pending' ? 'Warning' : ${Status} === 'Paid' ? 'Success' : 'Error' }"
                            active="true" />
                    </VBox>
                </FlexBox>

                <!-- Row 3 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Issue Date" />
                        <Text text="{path: 'IssueDate', formatter: '.formatDate'}"/>
                    </VBox>
                    <VBox width="30%">
                        <Label text="Due Date" />
                        <Text text="{path: 'DueDate', formatter: '.formatDate'}"/>
                    </VBox>
                    <VBox width="30%">
                        <Label text="Segment" />
                        <Text text="{RelatedSegment}" />
                    </VBox>
                </FlexBox>

                <HBox class="sapUiSmallMarginTop" justifyContent="Start">
                   <!--  <Button text="Edit" type="Accept" press=".onEdit" />  -->
                    <Button text="Edit" press=".onEdit"/>
                    <Button text="Change Status" type="Emphasized" press=".onOpenStatusDialog" class="sapUiTinyMarginBegin"/>
                </HBox>

            </VBox>
        </Panel>
    </Page>
</mvc:View>
