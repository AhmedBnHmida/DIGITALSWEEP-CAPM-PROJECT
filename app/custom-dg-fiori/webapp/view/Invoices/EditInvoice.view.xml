<mvc:View
    controllerName="customdgfiori.controller.Invoices.EditInvoice"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Page title="Edit Invoice" showNavButton="true" navButtonPress=".onCancel">
        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
            <VBox class="sapUiSmallMargin" width="700px">

                <!-- Row 1 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Invoice Number" />
                        <Input value="{InvoiceID}" placeholder="Invoice Number" editable="false" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Customer Name" />
                        <Input value="{CustomerName}" placeholder="Customer Name" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Country" />
                        <Input value="{Country}" placeholder="Country" />
                    </VBox>
                </FlexBox>

                <!-- Row 2 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Amount" />
                        <Input value="{Amount}" />
                    </VBox>
                    <VBox width="30%">
                        <Label text="Currency" />
                        <Select selectedKey="{Currency}" items="{currencyModel>/currencies}" required="true">
                            <core:Item key="{currencyModel>key}" text="{currencyModel>text}" />
                        </Select>
                    </VBox>
                    <VBox width="30%">
                        <Label text="Status" />
                        <Select selectedKey="{Status}" items="{statusModel>/statusList}" required="true">
                            <core:Item key="{statusModel>Status}" text="{statusModel>Status}" />
                        </Select>
                    </VBox>
                </FlexBox>

                <!-- Row 3 -->
                <FlexBox wrap="Wrap" justifyContent="SpaceBetween" class="sapUiSmallMarginBottom" width="100%">
                    <VBox width="30%">
                        <Label text="Issue Date" />
                        <DatePicker value="{IssueDate}" displayFormat="yyyy-MM-dd" placeholder="Issue Date" required="true"/>
                    </VBox>
                    <VBox width="30%">
                        <Label text="Due Date" />
                        <DatePicker value="{DueDate}" displayFormat="yyyy-MM-dd" placeholder="Due Date" required="true"/>
                    </VBox>
                    <VBox width="30%">
                        <Label text="Segment" />
                        <Select selectedKey="{RelatedSegment}" items="{segmentModel>/segments}" required="true">
                            <core:Item key="{segmentModel>SegmentName}" text="{segmentModel>SegmentName}" />
                        </Select>
                    </VBox>
                </FlexBox>

                <HBox class="sapUiSmallMarginTop" justifyContent="Start" >
                    <Button text="Save" type="Accept" press=".onSavePress" />
                    <Button text="Cancel" type="Reject" press=".onCancel" />
                </HBox>

            </VBox>
        </Panel>
    </Page>
</mvc:View>
