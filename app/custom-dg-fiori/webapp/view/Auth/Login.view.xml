<mvc:View
    controllerName="customdgfiori.controller.Auth.Login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page>
        <!-- HEADER centered -->
        <customHeader>
            <Bar>
                <!-- Left: Logo and Title -->
                <contentLeft>
                    <HBox alignItems="Center"  class="sapUiTinyMargin">
                        <Image src="img/logo.png" width="40px" height="40px" alt="App Logo"/>
                        <Title text="Finance App" level="H2" class="sapUiTinyMarginBegin"/>
                    </HBox>
                </contentLeft>

                <!-- Middle: Navigation buttons -->
                <contentMiddle>
                    <HBox alignItems="Center" justifyContent="Center" class="sapUiTinyMargin">
                        <Button text="Home" type="Transparent" press=".onHomePress"/>
                    </HBox>
                </contentMiddle>

                <!-- RIGHT: Login/Register -->
                <contentRight>
                    <HBox alignItems="Center" class="sapUiTinyMargin">
                        <Button text="Login" type="Emphasized" press=".onLoginPress"/>
                        <Button text="Register" type="Transparent" press=".onRegisterPress"/>
                    </HBox>
                </contentRight>
            </Bar>
        </customHeader>

        <!-- PAGE CONTENT -->
        <content>
            <VBox class="sapUiMediumMargin" renderType="Bare" justifyContent="Center" alignItems="Center">
                <Input id="inputEmaill" placeholder="Email" width="250px"/>
                <Input id="inputPasswordl" type="Password" placeholder="Password" width="250px"/>
                <Button text="Login" press=".onLoginPress" type="Emphasized"/>
                <Button text="Cancel" type="Transparent" press=".onCancelPress" />
                <!--<Button text="Register" type="Transparent" press=".onRegisterPress" />-->
            </VBox>
        </content>

        <!-- FOOTER centered -->
        <footer>
            <Bar>
                <contentMiddle>
                    <Text text="Â© 2025 Finance App. All rights reserved."/>
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>
