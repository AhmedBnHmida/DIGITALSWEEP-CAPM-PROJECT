<mvc:View
    controllerName="customdgfiori.controller.Auth.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page title="Welcome to MyApp">


        <!-- HEADER centered -->
        <customHeader>
            <Bar>
                <!-- Left: Logo and Title -->
                <contentLeft>
                    <HBox alignItems="Center"  class="sapUiTinyMargin">
                      <!--   <Image src="images/fina1.png" width="40px" height="40px" alt="App Logo"/>-->
                        <Title text="Finance App" level="H2" class="sapUiTinyMarginBegin"/>
                    </HBox>
                </contentLeft>

                <!-- Middle: Navigation buttons -->
                <contentMiddle>
                    <HBox alignItems="Center" justifyContent="Center" class="sapUiTinyMargin">
                        <Button text="Home" type="Transparent" press=".onHomePress"/>
                    </HBox>
                </contentMiddle>

                <!-- RIGHT: Login/Register -->
                <contentRight>
                    <HBox alignItems="Center" class="sapUiTinyMargin">
                        <Button text="Login" type="Emphasized" press=".onLoginPress"/>
                        <Button text="Register" type="Transparent" press=".onRegisterPress"/>
                    </HBox>
                </contentRight>
            </Bar>
        </customHeader>


        <content>
            <VBox class="sapUiSmallMargin" justifyContent="Center" alignItems="Center">
                <Text text="Welcome to the Fianace App!" class="sapUiLargeMarginBottom"/>
               <!-- <Button text="Go to Login" press=".onLoginPress" type="Emphasized"/>
                <Button text="Go to Register" press=".onRegisterPress" type="Transparent"/>-->
            </VBox>
        </content>

        <!-- FOOTER centered -->
        <footer>
            <Bar>
                <contentMiddle>
                    <Text text="Â© 2025 Finance App. All rights reserved."/>
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>
